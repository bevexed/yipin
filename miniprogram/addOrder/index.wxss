/* wait-post/wait-post.wxss */
.header-wrap{
	padding: 10rpx 0;
}
.header{
	padding: 30rpx;
	display: flex;
	justify-content: space-between;
	border-bottom: 1rpx solid #eee;
}

.title{
	font-size:32rpx;
	font-family:PingFangSC-Medium;
	font-weight:600;
	color:#182231;
}

.state{
	font-size:24rpx;
	font-family:PingFangSC-Regular;
	font-weight:400;
	color:rgba(68,142,246,1);
}

.detail{
	padding: 30rpx;
	font-size:26rpx;
	font-family:PingFangSC-Regular;
	font-weight:400;
	color:rgba(78,86,95,1);
}
.info_vc {
  padding: 30rpx 30rpx;
  display: flex;
  /*justify-content: space-between;*/
  border-bottom: 1px #D1D5DA solid;
	align-items: first;
	font-size: 26rpx;
	height: 88rpx;

}


.info_vc text{
	margin: 0;
	padding: 0;
}

.info_txt {
  width: 550rpx;
  height: 88rpx;
	margin-left: 30rpx;
	color: #9FA7B0;
	margin-top: 4rpx;

}
.noneBorder {
  border: none!important;
}

.num{
	margin-bottom: 10rpx;
}

.hr{
	height:20rpx;
	background:rgba(247,247,247,1);
}

.bottom{
	padding: 30rpx;
}

.textarea{
	width:640rpx;
	height: 200rpx;
	background:rgba(247,247,247,1);
	border-radius:4rpx;
	font-size:26rpx;
	font-family:PingFangSC-Regular;
	font-weight:400;
	color:rgba(159,167,176,1);
	padding: 24rpx;
	margin-top: 30rpx;
}
.pic{
	font-size:26rpx;
	font-family:PingFangSC-Regular;
	font-weight:400;
	color:rgba(78,86,95,1);
	margin: 30rpx 0;
}


.add{
	width: 206rpx;
	height: 206rpx;
  margin-right: 32rpx;
  margin-bottom: 32rpx;
}
.uploadBtn {
  border: 1px dashed #9FA7B0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.add:nth-child(3n){
  margin-right: 0;
}
.uploadBtn>image {
  width: 46rpx;
  height: 46rpx;
}

.phone {
  padding: 30rpx;
}

.phone-header {
  display: flex;
  justify-content: space-between;
}
.paddLeft {
  padding-left: 30rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap
}
.phone-title {
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(24, 34, 49, 1);
  margin-bottom: 12rpx;
}

.phone-price, .phone-state {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(68, 142, 246, 1);
}

.phone-price {
  font-size: 26rpx;
  margin-bottom: 12rpx;
}

.phone-class, .phone-imei {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(78, 86, 95, 1);
  margin-bottom: 12rpx;
}
.view_b {
  border-top: 1px #D1D5DA solid;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 30rpx 30rpx 0;
  height: 92rpx;
  margin-top: 30rpx;
}

.button1 {
  width: 152rpx;
  height: 52rpx;
  line-height: 52rpx;
  background: #9FA7B0;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  margin: 20rpx;
  text-align: center;
}

.button2 {
  width: 152rpx;
  height: 52rpx;
  line-height: 52rpx;
  background: rgba(68, 142, 246, 1);
  border-radius: 30rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  margin: 20rpx;
  text-align: center;
}
.orderBottom {
  padding: 30rpx;
  line-height:36px;
}
.shouhuoText {
  color: #182231;
  font-size: 32rpx;
  font-family:PingFangSC-Medium;
  font-weight: 600
}
.btnSubmit {
  margin-top: 32rpx;
}
