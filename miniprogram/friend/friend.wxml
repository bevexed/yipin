<view class='friend'>
  <image class='head-img' src='../asset/img/2.png'></image>

<i-tabs current="{{ current }}" bindchange="handleChange">
    <i-tab key="tab1" title="供应商加盟"></i-tab>
    <i-tab key="tab2" title="品牌店加盟"></i-tab>
    <i-tab key="tab3" title="代理商加盟"></i-tab>
</i-tabs>

  <view wx:if="{{current === 'tab1'}}">
  
  <i-input value="{{ value1 }}" title="姓名" autofocus placeholder="名字" />
  <i-input value="{{ value2 }}" type="number" title="联系方式" placeholder="请输入手机号" />
  <i-input value="{{ value2 }}" type="" title="选择地区" placeholder="点击选择地址" />
  <i-input value="{{ value2 }}" title="身份证号" placeholder="请输入身份证号" />
  <i-input value="{{ value2 }}" title="身份证照片" disabled />

  <i-button bind:click="handleClick" type="primary">提交</i-button>
  </view>

  <view wx:if="{{current === 'tab2'}}">
  
  <i-input value="{{ value1 }}" title="姓名" autofocus placeholder="名字" />
  <i-input value="{{ value2 }}" type="number" title="联系方式" placeholder="请输入手机号" />
  <i-input value="{{ value2 }}" type="" title="选择地区" placeholder="点击选择地址" />
 

  <i-button bind:click="handleClick" type="primary">提交</i-button>
  </view>

  <view wx:if="{{current === 'tab3'}}">

  <i-input value="{{ value1 }}" title="姓名" autofocus placeholder="名字" />
  <i-input value="{{ value2 }}" type="number" title="联系方式" placeholder="请输入手机号" />
  <i-input value="{{ value2 }}" type="" title="选择地区" placeholder="点击选择地址" />

  <i-button bind:click="handleClick" type="primary">提交</i-button>
  </view>
</view>