/* miniprogram/sold-out/sold-out.wxss */

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
  border-top: 1px solid #eee;
  padding: 14rpx 30rpx;
}

.time {
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(159, 167, 176, 1);
}

.state {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(68, 142, 246, 1);
}

.content {
  display: flex;
  padding: 30rpx;
  border-bottom: 1px solid #eee;
}

.content image {
  width: 112rpx;
  height: 112rpx;
  margin-right: 30rpx;
}

.title {
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(24, 34, 49, 1);
}

.bottom {
  margin-top: 10rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(159, 167, 176, 1);
}

.button {
  width: 152rpx;
  height: 52rpx;
  line-height: 52rpx;
  background: rgba(68, 142, 246, 1);
  border-radius: 30rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  margin: 20rpx;
  text-align: center;
}

.to-left{
  display: flex;
  justify-content: flex-end;
}

.hr {
  clear: both;
  border-bottom: 20rpx solid #f2f2f2;
}
