/**index.wxss**/

.swiper {
  height: 330rpx;
  width: 690rpx;
  margin: 10rpx auto;
}

.swiper image {
  width: 100%;
}

.swiper_container {
  margin: 40rpx auto 20rpx;
  height: 55rpx;
  width: 690rpx;
}

.swiper_item {
  display: flex;
  align-items: center;
}

.detail {
  font-size: 25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
}

.notice {
  margin-right: 20rpx;
  width: 32rpx;
  height: 32rpx;
}

.menus {
  margin-top: 10rpx;
  display: flex;
  flex-wrap: wrap;
}

.menus image {
  width: 49%;
  height: 260rpx;
}

.addBtn {
  width: 136rpx;
  height: 136rpx;
  position: fixed;
  right: 10rpx;
  bottom: 10rpx;
  z-index: 1000
}